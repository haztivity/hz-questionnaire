include node:jq-questionnaire/src/_jqQuestionnaire
div
    h1 Test una sola opción
    //Caso 2
    +jq-questionnaire({
        attributes:{
            "data-hz-resource":"HzQuestionnaire",
            "data-opt-jq-questionnaire-immediate-feedback":"true"
        }
    })
        +jq-questionnaire__header
            +jq-questionnaire__title({
                content: "Questionnaire title"
            })
            +jq-questionnaire__description({
                content: "Questionnaire description"
            })
            +jq-questionnaire__properties
                +jq-questionnaire__property({
                    content:"Nota corte",
                    type:"cutOffMark"
                })
                +jq-questionnaire__property({
                    content: "Nota máxima",
                    type: "maxPoints"
                })
                +jq-questionnaire__property({
                    content: "Nota final",
                    type: "finalMark ? Si : No"
                })
                +jq-questionnaire__property({
                    content: "Feedback inmediato",
                    type: "immediateFeedback ? Si : No"
                })
            +jq-questionnaire__actions
                +jq-questionnaire__action({
                    type: "start",
                    content: "Start"
                })
        +jq-questionnaire__body({
            questions: [
                {
                    content: "Question 1",
                    options: [
                        {
                            content: "Incorrect",
                            name: "question1",
                            isCorrect: false,
                            feedback: [
                                {
                                    content: "Feedback ko",
                                    type: "ko"
                                },
                                {
                                    content: "Feedback ok",
                                    type: "ok"
                                }
                            ]

                        },
                        {
                            content: "Correct",
                            name: "question1",
                            isCorrect: true,
                            feedback: [
                                {
                                    content: "Feedback ko",
                                    type: "ko"
                                },
                                {
                                    content: "Feedback ok",
                                    type: "ok"
                                }
                            ]
                        },
                        {
                            content: "Correct 2",
                            name: "question1",
                            isCorrect: true,
                            feedback: [
                                {
                                    content: "Feedback ko",
                                    type: "ko"
                                },
                                {
                                    content: "Feedback ok",
                                    type: "ok"
                                }
                            ]
                        }
                    ],
                    feedback:[
                        {
                            content:"Feedback ko",
                            type:"ko"
                        },
                        {
                            content:"Feedback ok",
                            type:"ok"
                        }
                    ]
                },
                {
                    content: "Question 2",
                    options: [
                        {
                            content: "Incorrect",
                            name: "question2",
                            isCorrect: false
                        },
                        {
                            content: "Correct",
                            name: "question2",
                            isCorrect: true
                        },
                        {
                            content: "Correct 2",
                            name: "question2",
                            isCorrect: true
                        }
                    ],
                    feedback:[
                        {
                            content: "Feedback always"
                        }
                    ]
                },
                {
                    content: "Question 3",
                    options: [
                        {
                            content: "Incorrect",
                            name: "question3",
                            isCorrect: false
                        },
                        {
                            content: "Correct",
                            name: "question3",
                            isCorrect: true
                        }
                    ]
                }
            ]
        })
            +jq-questionnaire__actions
                +jq-questionnaire__action({
                    type: "prev",
                    content: "Prev"
                })
                +jq-questionnaire__action({
                    type: "next",
                    content: "Next"
                })
                +jq-questionnaire__action({
                    type: "end",
                    content: "End"
                })
        +jq-questionnaire__result({
            items:[
                {
                    type:"success?Si:No",
                    content:"Aprueba"
                },
                {
                    type:"score",
                    content:"Nota"
                },
                {
                    type:"maxScore",
                    content:"Nota máxima"
                },
                {
                    type:"questionsSuccess",
                    content:"Aciertos"
                },
                {
                    type:"questionsFail",
                    content:"Fallos"
                },
                {
                    type:"questionsNotAttempted",
                    content:"Respuestas en blanco"
                }
            ]
        })